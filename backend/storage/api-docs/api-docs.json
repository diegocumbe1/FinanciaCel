{
    "openapi": "3.0.0",
    "info": {
        "title": "API FinanciaCel",
        "description": "Documentación de la API de crédito celular para FinanciaCel",
        "contact": {
            "email": "diegosoft84@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Servidor principal"
        }
    ],
    "paths": {
        "/api/clients": {
            "get": {
                "tags": [
                    "Clients"
                ],
                "summary": "Buscar clientes por nombre, email o número de documento",
                "operationId": "413c12320d4121431e38339f45ecaa7c",
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Buscar por nombre, email o número de documento (búsqueda parcial)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "document",
                        "in": "query",
                        "description": "Buscar cliente por número exacto de documento",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Listado de clientes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "string",
                                                        "format": "uuid"
                                                    },
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "document_number": {
                                                        "type": "string"
                                                    },
                                                    "email": {
                                                        "type": "string",
                                                        "nullable": true
                                                    },
                                                    "address": {
                                                        "type": "string",
                                                        "nullable": true
                                                    },
                                                    "phone_number": {
                                                        "type": "string",
                                                        "nullable": true
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Cliente no encontrado por número de documento",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Cliente no encontrado por número de documento."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/clients/{id}": {
            "get": {
                "tags": [
                    "Clients"
                ],
                "summary": "Obtener cliente por UUID",
                "operationId": "feff36e8c89b21277ad216c29ca9ca4b",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "UUID del cliente",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Cliente encontrado"
                    },
                    "404": {
                        "description": "Cliente no encontrado"
                    }
                }
            },
            "patch": {
                "tags": [
                    "Clients"
                ],
                "summary": "Actualizar cliente por UUID",
                "operationId": "57a4f93815d29f166543efe9b101d633",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "UUID del cliente",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "document_number": {
                                        "type": "string"
                                    },
                                    "document_type_id": {
                                        "type": "string",
                                        "format": "uuid"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "address": {
                                        "type": "string"
                                    },
                                    "phone_number": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Cliente actualizado exitosamente"
                    },
                    "404": {
                        "description": "Cliente no encontrado"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        },
        "/api/credits": {
            "get": {
                "tags": [
                    "Credits"
                ],
                "summary": "Listar solicitudes de crédito con filtros",
                "operationId": "f1ba6d309eb546ae3ca5966ebcb787e6",
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Buscar por nombre del cliente o modelo de teléfono",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "state",
                        "in": "query",
                        "description": "Filtrar por estado (pending, approved, rejected)",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de solicitudes"
                    }
                }
            },
            "post": {
                "tags": [
                    "Credits"
                ],
                "summary": "Crear solicitud de crédito",
                "operationId": "20adb8e37d999768d012e35697654873",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "client_id",
                                    "phone_id",
                                    "term"
                                ],
                                "properties": {
                                    "client_id": {
                                        "type": "string",
                                        "format": "uuid"
                                    },
                                    "phone_id": {
                                        "type": "string",
                                        "format": "uuid"
                                    },
                                    "term": {
                                        "type": "integer",
                                        "example": 12
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Solicitud creada exitosamente"
                    },
                    "400": {
                        "description": "Error de validación o crédito activo/stock insuficiente"
                    }
                }
            }
        },
        "/api/credits/{id}": {
            "get": {
                "tags": [
                    "Credits"
                ],
                "summary": "Obtener detalle de una solicitud de crédito",
                "operationId": "f33fce09e267b9b84ecf03942c75c92e",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalles de la solicitud"
                    },
                    "404": {
                        "description": "No encontrado"
                    }
                }
            },
            "patch": {
                "tags": [
                    "Credits"
                ],
                "summary": "Actualizar parcialmente una solicitud de crédito",
                "operationId": "dd2ce7411b65bf10cad652281ce11330",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "state": {
                                        "type": "string",
                                        "enum": [
                                            "approved",
                                            "rejected"
                                        ]
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Solicitud actualizada"
                    },
                    "400": {
                        "description": "Error de validación"
                    },
                    "404": {
                        "description": "No encontrado"
                    }
                }
            }
        },
        "/api/credits/{id}/instalments": {
            "get": {
                "tags": [
                    "Credits"
                ],
                "summary": "Listar cuotas de un crédito",
                "operationId": "76a25719d3f041a1ef982cd10b502580",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de cuotas"
                    },
                    "404": {
                        "description": "Crédito no encontrado"
                    }
                }
            }
        },
        "/api/credits/simulate": {
            "get": {
                "tags": [
                    "Credits"
                ],
                "summary": "Simular plan de pagos antes de crear la solicitud",
                "operationId": "05da7df019128c99939b5e1414c8207b",
                "parameters": [
                    {
                        "name": "amount",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    },
                    {
                        "name": "term",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "interest",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Plan de cuotas simulado"
                    },
                    "400": {
                        "description": "Parámetros inválidos"
                    }
                }
            }
        },
        "/api/phones": {
            "get": {
                "tags": [
                    "Phones"
                ],
                "summary": "Listar teléfonos con filtros",
                "description": "Devuelve una lista paginada de teléfonos. Permite filtrar por disponibilidad y buscar por marca o modelo.",
                "operationId": "4f09778cf0905312e42a713c47555129",
                "parameters": [
                    {
                        "name": "available",
                        "in": "query",
                        "description": "Filtrar solo los que tienen stock mayor a 0",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Buscar por marca o modelo",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número de página para paginación (100 por defecto)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de teléfonos paginada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "current_page": {
                                            "type": "integer"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Phone"
                                            }
                                        },
                                        "total": {
                                            "type": "integer"
                                        },
                                        "per_page": {
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Phones"
                ],
                "summary": "Crear teléfono",
                "operationId": "ae1a6344f5d8e77e97e85e2274719bfd",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "brand",
                                    "model",
                                    "storage",
                                    "ram",
                                    "display",
                                    "os",
                                    "processor",
                                    "description",
                                    "price",
                                    "stock"
                                ],
                                "properties": {
                                    "brand": {
                                        "type": "string"
                                    },
                                    "model": {
                                        "type": "string"
                                    },
                                    "storage": {
                                        "type": "string"
                                    },
                                    "ram": {
                                        "type": "string"
                                    },
                                    "display": {
                                        "type": "string"
                                    },
                                    "os": {
                                        "type": "string"
                                    },
                                    "processor": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float"
                                    },
                                    "stock": {
                                        "type": "integer"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Teléfono creado"
                    }
                }
            }
        },
        "/api/phones/{id}": {
            "get": {
                "tags": [
                    "Phones"
                ],
                "summary": "Ver detalles de un teléfono",
                "operationId": "84eda8bf65908e4186342f844270a1ed",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalles del teléfono"
                    },
                    "404": {
                        "description": "Teléfono no encontrado"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Phones"
                ],
                "summary": "Eliminar un teléfono",
                "operationId": "7e61af72c543a49f96139efa8c488d6a",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Eliminado correctamente"
                    },
                    "404": {
                        "description": "Teléfono no encontrado"
                    }
                }
            },
            "patch": {
                "tags": [
                    "Phones"
                ],
                "summary": "Actualizar parcialmente un teléfono",
                "operationId": "3b509a71d1b5ddce6b5613f36a2ec28c",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "stock": {
                                        "type": "integer",
                                        "example": 5
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Teléfono actualizado"
                    },
                    "404": {
                        "description": "Teléfono no encontrado"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Phone": {
                "title": "Phone",
                "description": "Modelo de un teléfono",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "brand": {
                        "type": "string"
                    },
                    "model": {
                        "type": "string"
                    },
                    "storage": {
                        "type": "string"
                    },
                    "ram": {
                        "type": "string"
                    },
                    "display": {
                        "type": "string"
                    },
                    "os": {
                        "type": "string"
                    },
                    "processor": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number",
                        "format": "float"
                    },
                    "stock": {
                        "type": "integer"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Clients"
        },
        {
            "name": "Credits",
            "description": "credit applications"
        },
        {
            "name": "Phones",
            "description": "Phones"
        }
    ]
}