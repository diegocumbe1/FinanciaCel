{
    "openapi": "3.0.0",
    "info": {
        "title": "API FinanciaCel",
        "description": "Documentación de la API de crédito celular para FinanciaCel",
        "contact": {
            "email": "soporte@simphony.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Servidor principal"
        }
    ],
    "paths": {
        "/api/clients": {
            "get": {
                "tags": [
                    "Clients"
                ],
                "summary": "Buscar clientes por nombre, email o documento",
                "operationId": "413c12320d4121431e38339f45ecaa7c",
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Texto de búsqueda",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Listado de clientes"
                    }
                }
            }
        },
        "/api/clients/{id}": {
            "get": {
                "tags": [
                    "Clients"
                ],
                "summary": "Obtener cliente por UUID",
                "operationId": "feff36e8c89b21277ad216c29ca9ca4b",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "UUID del cliente",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Cliente encontrado"
                    },
                    "404": {
                        "description": "Cliente no encontrado"
                    }
                }
            }
        },
        "/api/phones": {
            "get": {
                "tags": [
                    "Phones"
                ],
                "summary": "Listar teléfonos con filtros",
                "description": "Devuelve una lista paginada de teléfonos. Permite filtrar por disponibilidad y buscar por marca o modelo.",
                "operationId": "4f09778cf0905312e42a713c47555129",
                "parameters": [
                    {
                        "name": "available",
                        "in": "query",
                        "description": "Filtrar solo los que tienen stock mayor a 0",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Buscar por marca o modelo",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número de página para paginación (100 por defecto)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de teléfonos paginada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "current_page": {
                                            "type": "integer"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Phone"
                                            }
                                        },
                                        "total": {
                                            "type": "integer"
                                        },
                                        "per_page": {
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Phones"
                ],
                "summary": "Crear teléfono",
                "operationId": "ae1a6344f5d8e77e97e85e2274719bfd",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "brand",
                                    "model",
                                    "storage",
                                    "ram",
                                    "display",
                                    "os",
                                    "processor",
                                    "description",
                                    "price",
                                    "stock"
                                ],
                                "properties": {
                                    "brand": {
                                        "type": "string"
                                    },
                                    "model": {
                                        "type": "string"
                                    },
                                    "storage": {
                                        "type": "string"
                                    },
                                    "ram": {
                                        "type": "string"
                                    },
                                    "display": {
                                        "type": "string"
                                    },
                                    "os": {
                                        "type": "string"
                                    },
                                    "processor": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float"
                                    },
                                    "stock": {
                                        "type": "integer"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Teléfono creado"
                    }
                }
            }
        },
        "/api/phones/{id}": {
            "get": {
                "tags": [
                    "Phones"
                ],
                "summary": "Ver detalles de un teléfono",
                "operationId": "84eda8bf65908e4186342f844270a1ed",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalles del teléfono"
                    },
                    "404": {
                        "description": "Teléfono no encontrado"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Phones"
                ],
                "summary": "Eliminar un teléfono",
                "operationId": "7e61af72c543a49f96139efa8c488d6a",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Eliminado correctamente"
                    },
                    "404": {
                        "description": "Teléfono no encontrado"
                    }
                }
            },
            "patch": {
                "tags": [
                    "Phones"
                ],
                "summary": "Actualizar parcialmente un teléfono",
                "operationId": "3b509a71d1b5ddce6b5613f36a2ec28c",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "stock": {
                                        "type": "integer",
                                        "example": 5
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Teléfono actualizado"
                    },
                    "404": {
                        "description": "Teléfono no encontrado"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Phone": {
                "title": "Phone",
                "description": "Modelo de un teléfono",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "brand": {
                        "type": "string"
                    },
                    "model": {
                        "type": "string"
                    },
                    "storage": {
                        "type": "string"
                    },
                    "ram": {
                        "type": "string"
                    },
                    "display": {
                        "type": "string"
                    },
                    "os": {
                        "type": "string"
                    },
                    "processor": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number",
                        "format": "float"
                    },
                    "stock": {
                        "type": "integer"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Clients"
        },
        {
            "name": "Phones",
            "description": "Phones"
        }
    ]
}